{
  "name": "root",
  "private": true,
  "devDependencies": {
    "cz-conventional-changelog": "^2.1.0",
    "lerna": "^3.0.3"
  },
  "scripts": {
    "release": "lerna publish",
    "release:dry-run": "lerna publish --no-push --skip-npm",
    "update": "lerna version",
    "update:no-push": "lerna version --no-push",
    "update:no-tag": "lerna version --no-git-tag-version --no-push"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
